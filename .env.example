# Example .env.example for Case Locations report
# Copy this file to .env and fill in real values (DO NOT commit real secrets).

# Path to Google service account JSON (absolute path recommended)
GOOGLE_APPLICATION_CREDENTIALS=C:\path\to\service_account.json

# Database connection (example uses PostgreSQL defaults)
DB_HOST=your-db-host.example.com
DB_PORT=5432
DB_NAME=your_database
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Google Sheet identifier or full URL. Either the spreadsheet ID or URL accepted by your script.
SHEET_ID=your_google_sheet_id_or_full_url

# SQL query file that the script should run (relative to repo root)
QUERY_FILE=sql_query/your_query.sql

# Optional settings
LOG_LEVEL=INFO
TIMEOUT_SECONDS=30

# PowerShell quick-setup examples (run these in PowerShell to set env vars for the session):
# $env:GOOGLE_APPLICATION_CREDENTIALS = 'C:\path\to\service_account.json'
# $env:DB_HOST = 'your-db-host.example.com'
# $env:DB_USER = 'your_db_user'
# $env:DB_PASSWORD = 'your_db_password'
# $env:SHEET_ID = 'your_google_sheet_id_or_full_url'
